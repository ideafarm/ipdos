        sa.lpSecurityDescriptor = (SECURITY_DESCRIPTOR*)( _pbsd + _cbAlign ) ;
        sa.nLength = sizeof sa ;
        SECURITY_ATTRIBUTES sa ;
        
        if( _cbAlign ) _cbAlign = sizeof( unsigned ) - _cbAlign ;
        unsigned _cbAlign = (unsigned)_pbsd % sizeof( unsigned ) ;
    
